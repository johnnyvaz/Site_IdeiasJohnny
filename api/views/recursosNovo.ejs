              <div >
  
  <form action="/ideias/salvar" method="post">
    
    <div class="form-group">
        <div class="col-md-6 form-control">
            <label>Id: </label>
            <input type="text" value="<%= ideias[0].id%>" name="id"  size="5" >
          </div>
      <div class="col-md-6 form-control">
        <label>Nome: </label>
        <input type="text" value="<%= ideias[0].nome%>" name="nome"  required size="100" >
      </div>
      <div class="col-md-6 form-control">
        <label>Resumo: </label>
        <input type="text" value="<%= ideias[0].resumo%>" name="resumo"  required size="100" maxlength="200">
      </div>
     
      <div class="col-md-6 form-control">
        <label>Descrição: </label>
        <input type="text" value="<%= ideias[0].descricao%>" name="descricao" required size="100">
      </div>
      <div class="col-md-6 form-control">
        <label>Recursos: </label>
        <input type="text" value="<%= ideias[0].idRecursos%>" name="idRecursos" size="100">
      </div>
      <div class="col-md-6 form-control">
        <label>Tipo: </label>
        <input type="text" value="<%= ideias[0].tipo%>" name="tipo" placeholder="" size="100">
      </div>
      
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <button type="submit" class="btn btn-success" data-dismiss="modal">Salvar </button>                    
        </div>
        <div class="row">

          <br>
          <div class="col-md-3">
            <a class="btn btn-danger" href="/">Voltar</a>
          </div>

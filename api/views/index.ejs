            <div class="modal-content margem-modal">
              <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel"><%= ideias[i].nome %></h2><br>
              </div>
              <div class="modal-body">
                <div class="container-fluid modalideia">
                  <div>
                    <div class="col-md-1 form-control parent" size="5"><%= ideias[i].id %> </div>
                  </div>
                  <div class="col-">
                    <label for="resumo">Resumo</label>
                    <div class="col- form-control parent" id="resumo"><%= ideias[i].resumo %></div>
                  </div>
                  <!-- <br>
                  <textarea class="form-control parent" id="descricao" name="descricao" rows="5" cols="100%">
                  <%= ideias[i].descricao %>
                </textarea> -->
                <br>                
                <div class="">
                  <label for="descricao">Descrição</label>
                  <div class="col-md-8 form-control parent" id="descricao"><%= ideias[i].descricao %></div>
                </div>
                <div>
                  <label for="recursos">Recursos</label>
                  <div class="col-md-5 form-control parent"><%= ideias[i].idRecursos %></div>
                </div>
                <div>
                  <label for="tipo">Tipo</label>                    
                  <div class="col-md-3 form-control parent"><%= ideias[i].tipo %></div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
              <button type="button" class="btn btn-warning" data-dismiss="modal" data-toggle="modal" data-target="#edt_ideia<%= ideias[i].id %>">Editar</button>
            </div>
          </div>
        </div>
      </div>
    </div> 
    <% } } %>
    
    
    <!-- modal editar ideia  -->
    <% if(ideias.length>0){for(i=0; i<ideias.length; i++) { %>

      <div class="modal fade" id="edt_ideia<%= ideias[i].id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content margem-modal">
            <form action="/ideias/salvar" method="post">
              <div class="modal-header">
                <h2 class="modal-title" id="exampleModalLabel"><%= ideias[i].nome %></h2><br>
              </div>
              <div class="modal-body">
                <div class="container-fluid modalideia">
                  <div class="form-group">
                    <div class="col-md-1 form-control parent">
                      <label>Id: </label>
                      <input type="text" value="<%= ideias[i].id%>" name="id"  size="5" >
                    </div>
                    <div class="col- form-control parent">
                      <label>Nome: </label>
                      <input type="text" value="<%= ideias[i].nome%>" name="nome"  required size="50" >
                    </div>
                    <div class="col- form-control parent">
                      <label>Resumo: </label>
                      <input type="text" value="<%= ideias[i].resumo%>" name="resumo"  required size="60" maxlength="200">
                    </div>

                    <div class="form-control parent">
                      <label>Descrição: </label>
                      <input type="text" value="<%= ideias[i].descricao%>" name="descricao">
                    </div>
                    <div class="col-md-4 form-control parent">
                      <label>Recursos: </label>
                      <input type="text" value="<%= ideias[i].idRecursos%>" name="idRecursos" size="50">
                    </div>
                    <div class="col-4 form-control parent">
                      <label>Tipo: </label>
                      <input type="text" value="<%= ideias[i].tipo%>" name="tipo" placeholder="" size="50">
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-success" data-dismiss="modal">Salvar</button>  
              <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
            </div>
          </div>
        </div>
      </div>
    </div> 
    <% } } %>           
